<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="true"/>
  <arg name="failover_mode" default="false"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share agx_scheduler_bringup)/launch/rmf_core.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share agx_scheduler_bringup)/config/company.rviz"/>
    <arg name="config_file" value="$(find-pkg-share agx_scheduler_bringup)/config/company.building.yaml"/>

    <arg name="dashboard_config_file" value="$(find-pkg-share agx_scheduler_bringup)/config/dashboard_config.json"/>
  </include>

  <!-- TinyRobot fleet adapter and robot state aggregator needed for the TinyRobot slotcar_plugin -->
  <group>
    <let name="fleet_name" value="turtlebot3"/>
    <include file="$(find-pkg-share agx_scheduler_bringup)/launch/tb3_adapter.launch.xml">
      <arg name="fleet_name" value="$(var fleet_name)"/>
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share agx_scheduler_bringup)/config/nav.yaml" />
    </include>
    <!--include file="$(find-pkg-share rmf_fleet_adapter)/robot_state_aggregator.launch.xml">
      <arg name="robot_prefix" value="turtlebot3"/>
      <arg name="fleet_name" value="$(var fleet_name)"/>
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="failover_mode" value="$(var failover_mode)"/>
    </include-->
  </group>

</launch>
